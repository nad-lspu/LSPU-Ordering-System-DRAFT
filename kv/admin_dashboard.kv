<AdminDashboard>:
    name: "admin_dashboard"

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Grab Piyu-d | " + app.admin_name
            right_action_items: [["logout", lambda x: app.logout()]]
            elevation: 10

        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "15dp"

            MDLabel:
                text: f"Welcome, {app.admin_name}"
                font_style: "H5"
                halign: "center"

            MDRaisedButton:
                text: "Manage Menu"
                pos_hint: {"center_x": 0.5}
                on_release: root.manager.current = "manage_menu"

            MDRaisedButton:
                text: "View Orders"
                pos_hint: {"center_x": 0.5}
                on_release: root.manager.current = "view_orders"

            MDRaisedButton:
                text: "View Analytics"
                pos_hint: {"center_x": 0.5}
                on_release: root.manager.current = "analytics"
