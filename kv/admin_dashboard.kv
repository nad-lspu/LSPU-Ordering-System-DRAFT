<AdminDashboard>:
    name: "admin_dashboard"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "10dp"

        MDTopAppBar:
            title: "Grab Piyu-d Admin"
            right_action_items: [["logout", lambda x: app.logout()]]

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "120dp"
            spacing: "10dp"

            MDCard:
                orientation: "vertical"
                padding: "10dp"
                radius: [20,]
                md_bg_color: app.theme_cls.primary_light
                elevation: 8

                MDLabel:
                    text: "Total Orders"
                    font_style: "Subtitle1"
                    theme_text_color: "Primary"

                MDLabel:
                    text: "24"  # replace with dynamic value
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1

            MDCard:
                orientation: "vertical"
                padding: "10dp"
                radius: [20,]
                md_bg_color: app.theme_cls.primary_light
                elevation: 8

                MDLabel:
                    text: "Total Menu Items"
                    font_style: "Subtitle1"
                    theme_text_color: "Primary"

                MDLabel:
                    text: "10"  # replace with dynamic value
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1

        MDRaisedButton:
            text: "Manage Menu"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.5, None
            height: "40dp"
            on_release: root.go_to_menu_management()

        MDRaisedButton:
            text: "View Orders"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.5, None
            height: "40dp"
            on_release: root.go_to_orders()
