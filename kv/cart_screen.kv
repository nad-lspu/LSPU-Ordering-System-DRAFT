<CartScreen>:
    MDFloatLayout:
        md_bg_color: app.theme_cls.primary_color

        MDCard:
            size_hint: 0.9, 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 12
            padding: dp(20)
            orientation: "vertical"
            spacing: dp(20)
            radius: [20, 20, 20, 20]

            MDLabel:
                text: "Your Cart"
                font_style: "H5"
                halign: "center"
                bold: True

            ScrollView:
                MDList:
                    id: cart_list

            MDLabel:
                id: total_price
                text: "Total: $0.00"
                font_style: "H6"
                halign: "center"
                bold: True

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(70)
                spacing: dp(20)

                MDRaisedButton:
                    text: "Clear Cart"
                    icon: "trash-can"
                    pos_hint: {"center_x": 0.5}
                    on_release: root.clear_cart()

                MDRaisedButton:
                    text: "Checkout"
                    icon: "credit-card"
                    pos_hint: {"center_x": 0.5}
                    on_release: root.checkout()
