<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        pos_hint: {"center_y": 0.5}
        size_hint_y: None
        height: self.minimum_height

        Image:
            source: "assets/GrabPiyudLong_g.png"
            size_hint: None, None
            size: "500dp", "180dp"
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"center_x": 0.5, "top": 0.95}

        MDTextField:
            id: login_email
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            hint_text: "Email"
            icon_right: "email"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            helper_text_mode: "on_error"

        MDTextField:
            id: login_password
            hint_text: "Password"
            icon_right: "lock"
            password: True
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            on_icon_right: root.toggle_password_visibility(self)
            helper_text_mode: "on_error"

        MDRaisedButton:
            text: "Login"
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            pos_hint: {"center_x": 0.5}
            on_release: root.login_user()

        MDTextButton:
            text: "Don't have an account? [b]Register here[/b]"
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            markup: True
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "register_screen"

        MDTextButton:
            text: "[b]Forgot Password?[/b]"
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            markup: True
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            on_release: root.forgot_password()
