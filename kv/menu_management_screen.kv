<MenuManagement>:
    name: "menu_management_screen"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Menu Management"
            left_action_items: [["arrow-left", lambda x: app.change_screen("admin_dashboard")]]

        MDRaisedButton:
            text: "Add New Item"
            on_release: root.add_new_item()

        MDRaisedButton:
            text: "Edit Item"
            on_release: root.edit_item()
