<Orders>:
    name: "orders_screen"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Manage Orders"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: setattr(app.root, "current", "admin_dashboard")]]
            right_action_items: [["refresh", lambda x: root.load_orders()]]
            md_bg_color: app.theme_cls.primary_color

        ScrollView:
            MDList:
                id: orders_list
