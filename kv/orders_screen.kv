<Orders>:
    name: "orders_screen"

    MDBoxLayout:
        orientation: "vertical"
        spacing: 0
        padding: 0

        MDTopAppBar:
            id: toolbar
            title: "[font=assets/fonts/Churchward Lorina Bold]Manage Orders[/font]"
            elevation: 0
            left_action_items: [["arrow-left", lambda x: setattr(app.root, "current", "admin_dashboard")]]
            right_action_items: [["refresh", lambda x: root.load_orders()]]
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"top": 1}

        ScrollView:
            MDGridLayout:
                id: orders_list
                cols: 1
                spacing: dp(15)
                padding: dp(10)
                size_hint_y: None
                height: self.minimum_height
                adaptive_height: True