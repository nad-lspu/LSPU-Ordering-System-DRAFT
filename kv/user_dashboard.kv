<UserDashboard>
    MDFloatLayout:
        md_bg_color: app.theme_cls.primary_color

        MDCard:
            size_hint: 0.92, 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 12
            padding: dp(20)
            orientation: "vertical"
            spacing: dp(20)
            radius: [20, 20, 20, 20]

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {"center_x": 0.5}

                MDIcon:
                    icon: "account-circle"
                    halign: "center"
                    font_size: "64sp"
                    theme_text_color: "Secondary"

                MDLabel:
                    id: user_name
                    text: "Loading Name..."
                    halign: "center"
                    font_style: "H6"

                MDLabel:
                    id: user_email
                    text: "Loading Email..."
                    halign: "center"
                    font_style: "Caption"

            MDSeparator:
                height: dp(1)

            MDLabel:
                text: "Order History"
                font_style: "Subtitle1"
                halign: "left"
                bold: True

            ScrollView:
                size_hint_y: 0.45

                MDList:
                    id: order_history

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height
                padding: [0, dp(10)]

                MDRaisedButton:
                    text: "Order Now"
                    icon: "shopping"
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: app.theme_cls.primary_light
                    on_release: root.navigate_to_menu()

                MDRaisedButton:
                    text: "Logout"
                    icon: "logout"
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: [1, 0, 0, 1]
                    on_release: root.logout()
