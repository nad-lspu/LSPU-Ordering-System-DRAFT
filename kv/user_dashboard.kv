<UserDashboard>:
    name: "user_dashboard"
    MDFloatLayout:

        MDLabel:
            text: "Welcome, User!"
            halign: "center"
            font_style: "H4"
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            pos_hint: {"center_x": 0.5, "top": 0.95}
            size_hint_y: None
            height: self.texture_size[1]

        MDRaisedButton:
            text: "Browse Menu"
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint: None, None
            size: dp(200), dp(48)
            on_release:
                app.root.current = "menu_screen"

        MDRaisedButton:
            text: "My Orders"
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            size_hint: None, None
            size: dp(200), dp(48)
            on_release:
                app.root.current = "orders_screen"

        MDTextButton:
            text: "[b]Logout[/b]"
            markup: True
            font_name: "assets/fonts/NotoSansKhmer.ttf"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release:
                app.logout()
