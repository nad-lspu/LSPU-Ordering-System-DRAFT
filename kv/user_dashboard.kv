<UserDashboard>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "20dp"

        MDLabel:
            text: "User Dashboard"
            halign: "center"
            theme_text_color: "Secondary"
            font_style: "H5"

        ScrollView:
            MDBoxLayout:
                id: user_orders_layout
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: "10dp"

        MDRaisedButton:
            text: "Logout"
            size_hint: None, None
            size: "150dp", "50dp"
            pos_hint: {"center_x": 0.5}
            on_release: root.logout()

        MDRaisedButton:
            text: "Back to Menu"
            size_hint: None, None
            size: "150dp", "50dp"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "menu_screen"
